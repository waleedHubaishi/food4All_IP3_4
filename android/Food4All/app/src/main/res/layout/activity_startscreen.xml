<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.chewbacca.food4all.Startscreen"
    android:weightSum="1"
    android:background="@color/colorbackground"
    android:fontFamily="sans-serif">

    <!-- Startup screen -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView2"
            android:layout_weight="0.80"
            android:text="@string/startscreen_title"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:layout_marginBottom="20dp"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:background="@color/colorbackground"
        android:onClick="goToLogin"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_avatar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="@string/startscreen_login"
        android:gravity="center"
        android:textSize="18sp" />

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/ic_book"
        android:id="@+id/imageButton5"
        android:onClick="goToRegister"
        android:scaleType="fitCenter"
        android:background="@color/colorbackground"/>

    <TextView
        android:text="@string/startscreen_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:gravity="center"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imageButton15"
        android:layout_width="229dp"
        android:layout_height="wrap_content"
        android:onClick="goToFirstAdvertisementPage"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Advertise"
        android:textAlignment="textStart" />

</LinearLayout>